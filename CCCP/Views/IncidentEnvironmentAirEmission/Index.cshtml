@model IEnumerable<CCCP.ViewModel.IncidentEnvironmentAirEmission>

@using CCCP.Common
@{
    ViewBag.Title = Resources.global.Menu_IncidentEnvironmentAirEmission;
}

@section Scripts {
    <script>
        $(document).ready(function () {
            dTable = $('#IncidentList').DataTable({
                "sDom": '<"top"l>rt<"bottom"ip><"clear">'
            });

            $('#filterText').keyup(function() {
                dTable.search($(this).val()).draw();
            });
        });
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-clipboard"></i> @Resources.global.Menu_IncidentManagement - @Resources.global.Menu_IncidentEnvironmentAirEmission
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-md-12">
            <!-- content -->

            <div class="box box-primary">

                <div class="box-body">

                    <div class="pull-left" style="padding-right:20px">
                        <div class="form-group">
                            <button class="btn btn-primary" type="button" onclick="window.location = '@Url.Action("Create", "IncidentEnvironmentAirEmission")';">@Resources.global.Func_Create</button>
                            <button class="btn btn-primary" type="button" onclick="window.location = '#'">@Resources.global.Func_Export</button>
                        </div>
                    </div>
                    <div class="pull-right">Search: <input id="filterText" /></div>
                    <table id="IncidentList" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.IncidentNo)</th>
                                <th>@Html.DisplayNameFor(model => model.LevelOfSeverity)</th>
                                <th>@Html.DisplayNameFor(model => model.IncidentBackground)</th>
                                <th>@Html.DisplayNameFor(model => model.IncidentStatus)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                <th>@Html.DisplayNameFor(model => model.IssueDateTime)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            { 
                                string sLevelOfSeverity = "";
                                if (item.LevelOfSeverity != null)
                                {
                                    int level = Convert.ToInt32(item.LevelOfSeverity);
                                    IncidentLevel iLevel = (IncidentLevel)level;
                                    sLevelOfSeverity = iLevel.ToEnumString();
                                }
                            <tr>
                                <td><a href="@Url.Action("Details", "IncidentEnvironmentAirEmission", new { id = item.IncidentEnvironmentAirEmissionId })">@Html.DisplayFor(modelItem => item.IncidentNo)</a></td>
                                <td>@Html.DisplayFor(model => sLevelOfSeverity)</td>
                                <td>@Html.DisplayFor(model => item.IncidentBackground)</td>
                                <td>@Html.DisplayFor(model => item.IncidentStatus)</td>
                                <td>@Html.DisplayFor(model => item.CreatedBy)</td>
                                <td>@Html.DisplayFor(model => item.IssueDateTime)</td>
                                <td>
                                    <div class="tools">
                                        <a href="@Url.Action("Edit", "IncidentEnvironmentAirEmission", new { id = item.IncidentEnvironmentAirEmissionId })" title="@Resources.global.Func_Edit"><i class="fa fa-sliders"></i></a>
                                        <a href="@Url.Action("Delete", "IncidentEnvironmentAirEmission", new { id = item.IncidentEnvironmentAirEmissionId })" class="text-red" title="@Resources.global.Func_Delete"><i class="fa fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

</section><!-- /.content -->