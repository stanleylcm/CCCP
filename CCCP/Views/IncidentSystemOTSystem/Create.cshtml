@model CCCP.Business.Model.IncidentSystemOTSystemModel

@using CCCP.Common
@using CCCP.Business.Service
@{
    ViewBag.Title = Resources.global.Menu_IncidentSystemOTSystem;
    CCCP.ViewModel.IncidentSystemOTSystem incidentSystemOTSystem = Model.Entity; // variable for binding
