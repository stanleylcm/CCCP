                                    </div>
                                </div>
							</div>
						</div>
					</div>
                            
                    @Html.HiddenFor(model => incidentSystemOTSystem.IncidentSystemOTSystemId, new { @Value = 0 })
                    @Html.HiddenFor(model => incidentSystemOTSystem.ChecklistBatchId, new { @Value = 0 })
                    @Html.HiddenFor(model => incidentSystemOTSystem.ChatRoomId, new { @Value = 0 })
                    @Html.HiddenFor(model => incidentSystemOTSystem.GeneralEnquiryId, new { @Value = 0 })
