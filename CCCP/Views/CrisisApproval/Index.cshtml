@model IEnumerable<CCCP.Business.Model.CrisisModel>

@using CCCP.Common
@using CCCP.Business.Service
@using CCCP.ViewModel
@{
    ViewBag.Title = Resources.global.Menu_CrisisApproval;
}

@section Scripts {
    <script>
    $(document).ready(function () {
        dTable = $('#CrisisApprovalList').DataTable({
            "sDom": '<"top"l>rt<"bottom"ip><"clear">'
        });

        $('#filterText').val('@(ViewBag.SearchCriteria != null && ViewBag.SearchCriteria != "" ? ViewBag.SearchCriteria : "")');
            if ($('#filterText').val() != "") {
                $('#filterText').val('"' + $('#filterText').val() + '"');
            }
            dTable.search($('#filterText').val()).draw();

            $('#filterText').keyup(function() {
                dTable.search($(this).val()).draw();
            });
        });


    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @{ Html.RenderAction("AlertSuccess", "Home", new { message = ViewBag.Message }); }

    <h1>
        <i class="fa fa-check"></i> @Resources.global.Menu_CrisisApproval
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-md-12">
            <!-- content -->

            <div class="box box-primary">

                <div class="box-body">

                    <div class="pull-left" style="padding-right:20px">
                        <div class="form-group">
                            <button class="btn btn-primary" type="button" onclick="window.location = '#'">@Resources.global.Func_Export</button>
                        </div>
                    </div>
                    <div class="pull-right">Search: <input id="filterText" /></div>
                    <table id="CrisisApprovalList" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Entity.CrisisNo)</th>
                                <th>Crisis Type</th>
                                <th>Levelt of Severity</th>
                                <th>Description</th>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Entity.CreatedBy)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Entity.IssueDateTime)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.Entity.CrisisNo)</td>
                                    <td>@MasterTableService.GetIncidentTypeName(item.IncidentType)</td>
                                    <td>...</td>
                                    <td>...</td>
                                    <td>@Html.DisplayFor(model => item.Entity.CreatedBy)</td>
                                    <td>@Html.DisplayFor(model => item.Entity.IssueDateTime)</td>
                                    <td>
                                        <div>
                                            <a href="@Url.Action("Details", "CrisisApproval", new { id = item.Entity.CrisisId })" title="@Resources.global.Func_Details"><i class="fa fa-sliders"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

</section><!-- /.content -->