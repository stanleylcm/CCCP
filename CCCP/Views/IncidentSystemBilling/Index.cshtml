@model IEnumerable<CCCP.ViewModel.IncidentSystemBilling>

@{
    ViewBag.Title = "System(Billing)";
}

<script>
    $(document).ready(function () {
        $('#IncidentList').DataTable();

        $('.dataTables_length').parent().attr("class", "col-sm-5");
    });
</script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Incident - System(Billing)
    </h1>

    <!--
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
    -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-md-12">
            <!-- content -->

            <div class="box box-primary">
                <div class="box-header">
                    <i class="fa fa-clipboard"></i>

                    <h3 class="box-title">Incident - System(Billing)</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body">

                    <div class="pull-left"><button class="btn btn-primary" type="button" onclick="window.location = '@Url.Action("Create", "IncidentSystemBilling")';">Create</button></div>
                    <table id="IncidentList" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.IncidentNo)</th>
                                <th>Incident Type</th>
                                <th>@Html.DisplayNameFor(model => model.LevelOfSeverity)</th>
                                <th>@Html.DisplayNameFor(model => model.IncidentStatus)</th>
                                <th>@Html.DisplayNameFor(model => model.IncidentBackground)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            { 
                            <tr>
                                <td><a href="@Url.Action("Details", "IncidentSystemBilling", new { id = item.IncidentSystemBillingId })">@Html.DisplayFor(modelItem => item.IncidentNo)</a></td>
                                <td>System(Billing)</td>
                                <td>@Html.DisplayFor(modelItem => item.LevelOfSeverity)</td>
                                <td>@Html.DisplayFor(modelItem => item.IncidentStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.IncidentBackground)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                <td>@Html.ActionLink("Details", "Details", new { id = item.IncidentSystemBillingId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IncidentSystemBillingId })</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

</section><!-- /.content -->