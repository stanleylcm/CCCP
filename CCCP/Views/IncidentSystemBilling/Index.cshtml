@model IEnumerable<CCCP.ViewModel.IncidentSystemBilling>

@{
    ViewBag.Title = "System(Billing)";
    string IncidentType = "System(Billing)";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#IncidentList').DataTable();

            $('.dataTables_length').parent().attr("class", "col-sm-5");
        });
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-clipboard"></i> Incident - @IncidentType
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-md-12">
            <!-- content -->

            <div class="box box-primary">

                <div class="box-body">

                    <div class="pull-left"><button class="btn btn-primary" type="button" onclick="window.location = '@Url.Action("Create", "IncidentSystemBilling")';">Create</button></div>
                    <table id="IncidentList" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.IncidentNo)</th>
                                <th>Incident Type</th>
                                <th>@Html.DisplayNameFor(model => model.LevelOfSeverity)</th>
                                <th>@Html.DisplayNameFor(model => model.IncidentStatus)</th>
                                <th>@Html.DisplayNameFor(model => model.IncidentBackground)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            { 
                            <tr>
                                <td><a href="@Url.Action("Details", "IncidentSystemBilling", new { id = item.IncidentSystemBillingId })">@Html.DisplayFor(modelItem => item.IncidentNo)</a></td>
                                <td>@IncidentType</td>
                                <td>@Html.DisplayFor(model => item.LevelOfSeverity)</td>
                                <td>@Html.DisplayFor(model => item.IncidentStatus)</td>
                                <td>@Html.DisplayFor(model => item.IncidentBackground)</td>
                                <td>@Html.DisplayFor(model => item.CreatedBy)</td>
                                <td>
                                    <div class="tools">
                                        <a href="@Url.Action("Edit", "IncidentSystemBilling", new { id = item.IncidentSystemBillingId })"><i class="fa fa-sliders"></i></a>
                                        <a href="@Url.Action("Delete", "IncidentSystemBilling", new { id = item.IncidentSystemBillingId })"><i class="fa fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

</section><!-- /.content -->